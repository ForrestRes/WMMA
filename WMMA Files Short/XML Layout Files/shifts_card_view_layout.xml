<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvShiftsShift"
                android:text="Shift: "
                android:layout_above="@id/tvShiftsFrom"
                android:layout_alignRight="@id/tvShiftsFrom"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvShiftsDate"
                android:text="Date"
                android:textSize="18dp"
                android:layout_toRightOf="@id/tvShiftsShift"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvShiftsStartTime"
                android:text="Start Time"
                android:layout_below="@id/tvShiftsDate"
                android:layout_toRightOf="@id/tvShiftsFrom"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvShiftsFrom"
                android:text="From: "
                android:layout_below="@id/tvShiftsDate"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvShiftsTo"
                android:text="To: "
                android:layout_below="@id/tvShiftsFrom"
                android:layout_alignRight="@id/tvShiftsFrom"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvShiftsEndTime"
                android:text="End Time"
                android:layout_below="@id/tvShiftsFrom"
                android:layout_toRightOf="@id/tvShiftsFrom"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:id="@+id/bShiftsTrade"
            android:text="Trade"
            android:textSize="11dp"
            android:layout_alignParentRight="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvShiftsTrade"
            android:textColor="@color/red"
            android:textAlignment="center"
            android:text="Offered for shift trade. Not yet taken."
            android:layout_below="@id/tvShiftsTo"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>