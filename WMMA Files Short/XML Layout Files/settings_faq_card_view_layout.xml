<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvSettingsFAQ"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="15dp">

    <RelativeLayout
        android:id="@+id/rlSettingsFAQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cvSettingsFAQQuestion"
            android:padding="15dp"
            app:cardBackgroundColor="@color/teal_700"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivSettingsFAQIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_right" />

                <TextView
                    android:id="@+id/tvSettingsFAQQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Question"
                    android:layout_toRightOf="@id/ivSettingsFAQIcon"
                    android:padding="5dp"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cvSettingsFAQQuestion"
            android:padding="15dp">

            <TextView
                android:id="@+id/tvSettingsFAQAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Answer"
                android:paddingLeft="20dp"
                android:paddingRight="5dp"
                android:visibility="gone"/>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</androidx.cardview.widget.CardView>